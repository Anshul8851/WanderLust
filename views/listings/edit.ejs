<% layout("/layouts/boillerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h1 class="mt-2">Edit Your Listing</h1>
    
        <form method="POST" action="/listings/<%=list._id%>?_method=PUT" novalidate enctype="multipart/form-data" class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title" >Title:</label>
                <input class="form-control" type="text" name="title" id="title" value="<%=list.title%>" required/>
                <div class="invalid-feedback">Enter valid title</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description" >Description:</label><br/><br/>
                <textarea class="form-control" name="description" id="description" required><%=list.description%></textarea>
                <div class="invalid-feedback">Enter valid description</div>
            </div>
           
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label" for="country" >Country:</label>
                    <input class="form-control" type="text" name="country" id="country" value="<%=list.country%>" required/>
                    <div class="invalid-feedback">Enter valid country</div>
                </div>
                
               <div class="mb-3 col-md-8">
                <label class="form-label" for="location" >Location:</label>
                <input class="form-control" type="text" name="location" id="location" value="<%=list.location%>" required/>
                <div class="invalid-feedback">Enter valid location</div>
               </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="price" >Price:</label>
                <input class="form-control" type="number" name="price" id="price" value="<%=list.price%>" required/>
                <div class="invalid-feedback">Enter valid price</div>
            </div>

            <div class="mb-3">
                <p>Original Listing Image</p>
                <img src="<%=list.image.url%>" alt="" srcset="">
            </div>

            <div class="mb-3">
                <label class="form-label" for="image" >Upload New Image</label>
                <input class="form-control" type="file" name="image" id="image"/>
                <div class="invalid-feedback">Enter image url</div>
            </div>
            
            
            <button class="btn btn-hover btn-primary p-2 mb-3">Submit Details</button>
           
        </form>
    </div>
    </div>
    
</body>
